<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Casino" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_theme</item>
        <item name="colorPrimaryVariant">@color/black_theme</item>
        <item name="counterTextColor">@color/white</item>
        <item name="colorOnPrimary">@color/dark_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_black_theme</item>
        <item name="colorSecondaryVariant">@color/secondary_black_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>